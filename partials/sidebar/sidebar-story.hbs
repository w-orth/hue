<div class="sidebar-items u-marginBottom30 u-flexColumn">
    <h3 class="sidebar-title u-fontSizeBase u-textColorDarker u-marginBottom20 u-fontWeightBold"><span class="u-paddingBottom10 u-inlineBlock">{{widgetTitle}}</span></h3>

    {{#foreach widgetPosts}}
    <div class="sidebar-post godo-tracking u-relative u-flex" data-event-category="Sidebar" data-event-action="{{#is "home"}}Featured Post{{else}}Latest Post{{/is}}" data-event-label="#{{@number}}" data-event-non-interaction="true">
        <span class="u-flex0 sidebar-border u-flexCenter u-fontSize36 u-fontWeightSemibold">{{@number}}</span>
        <h3 class="u-flex1 u-fontSize15 u-fontWeightMedium u-lineHeightTight u-flexCenter">{{title}}</h3>
        <a href="{{url absolute="true"}}" class="u-absolute0 u-zindex2"></a>
    </div>
    {{/foreach}}

</div>
