<aside class="sideNav u-absolute0 u-hide-after-lg u-bgColor">
    <div class="sideNav-wrap u-absolute0">
        {{!-- Menu --}}
        <nav class="sideNav-menu">{{navigation}}</nav>

        {{!--follow box --}}
        <div class="sideNav-follow followMe u-fontSize20 u-paddingTop20 u-paddingLeft20 u-paddingRight20">
            {{#if @blog.facebook}} <a title="Facebook {{@blog.facebook}}" href="{{facebook_url}}" target="_blank" rel="noopener noreferrer" class="i-facebook"></a>{{/if}}
            {{#if @blog.twitter}} <a title="Twitter {{@blog.twitter}}" href="{{twitter_url}}" target="_blank" rel="noopener noreferrer" class="i-twitter"></a>{{/if}}
        </div>
    </div>
</aside>
