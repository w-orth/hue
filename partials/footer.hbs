<footer class="footer u-fontSizeSmaller u-fontWeightMedium">
    <div class="footer-links">
        <div class="extreme-container u-flexCenter u-flexColumn">
            {{!-- Follow social media --}}
            <aside class="follow followMe u-textColorWhite u-fontSize20 u-textAlignCenter">
                {{#if @blog.facebook}}<a class="godo-tracking i-facebook" data-event-category="Footer" data-event-action="Social Media" data-event-label="Facebook" data-event-non-interaction="true" title="Facebook {{@blog.facebook}}" href="{{facebook_url}}" target="_blank" rel="noopener noreferrer"></a>{{/if}}
                {{#if @blog.twitter}}<a class="godo-tracking i-twitter" data-event-category="Footer" data-event-action="Social Media" data-event-label="Twitter" data-event-non-interaction="true" title="Twitter {{@blog.twitter}}" href="{{twitter_url}}" target="_blank" rel="noopener noreferrer"></a>{{/if}}
                {{!-- Subscribe BTN for modal newsletter --}}
                {{#if @labs.subscribers}}<a href="#" class="subscribe-toggle modal-toggle u-relative i-email u-floatRight godo-tracking" data-event-category="Footer" data-event-action="Social Media" data-event-label="Newsletter" data-event-non-interaction="true"></a>{{/if}}
            </aside>
            {{!-- Footer Menu --}}
            <ul class="footer-menu u-textUppercase u-textAlignCenter u-marginTop20 u-hide"></ul>
        </div>
    </div>
    {{!-- copy --}}
    <div class="footer-copy u-textAlignCenter">
        &copy; {{date format="YYYY"}} <a href="{{@blog.url}}">{{@blog.title}}</a>
        {{!-- Designed with <i class="i-favorite animated infinite pulse" style="color:red;display:inline-block"></i> by the team at <a href="https://w-orth.io" title="Developer Extraordinaries">@worthio</a> --}}
    </div>
</footer>
